% This program should work and be accepted.

path p1, p2, p3, p4, p5, p6, p7, p8, p9;
path quartercircle, halfcircle, fullcircle;
path unitsquare;
path a, b, c, d, e, f, g, h, i, j, k;

p1 = (1, 5);
p2 = p1;
p3 = reverse p1;
p4 = subpath (-10, 8) of p3;
p5 = (1, 5) / 2;
p6 = 2 * (1, 5);
